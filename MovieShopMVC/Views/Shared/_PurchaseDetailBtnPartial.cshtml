

<div>
    <button type="button" class="btn btn-light w-75 float-end my-1 py-0" data-bs-toggle="modal" data-bs-target="#buyBtnModal" "> 
        Purchase Details
    </button>
    <div class="modal fade" id="buyBtnModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Purchase Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                    <img src="@Model." alt="@Model.Title" class="w-25">
                    <p>@Model.Price</p>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
